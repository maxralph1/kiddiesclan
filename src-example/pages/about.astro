---

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="About Us - Babycaring">
    <Header />
    
    <main class="about-page">
        <section class="page-hero">
            <div class="container">
                <h1>About Babycaring</h1>
                <p>Learn more about our mission and values</p>
            </div>
        </section>
        
        <section class="about-content">
            <div class="container">
                <div class="content-grid">
                    <div class="content-text">
                        <h2>Our Story</h2>
                        <p>Babycaring was founded with a simple mission: to provide compassionate, professional care that helps children thrive and gives parents peace of mind.</p>
                        <p>We understand that finding the right caregiver is one of the most important decisions a parent can make. That's why we've built a platform that connects families with carefully vetted, experienced caregivers who share our commitment to excellence in childcare.</p>
                    </div>
                    <div class="content-image">
                        <!-- Add about image -->
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <Footer />
</Layout>

<style>
    .about-page {
        min-height: 100vh;
    }
    
    .page-hero {
        background-color: var(--gray-color);
        padding: 4rem 0;
        text-align: center;
    }
    
    .page-hero h1 {
        font-size: 3rem;
        color: var(--dark-color);
        margin-bottom: 1rem;
    }
    
    .about-content {
        padding: 4rem 0;
    }
    
    .content-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }
    
    .content-text h2 {
        color: var(--secondary-color);
        margin-bottom: 1.5rem;
    }
    
    .content-text p {
        margin-bottom: 1.5rem;
        line-height: 1.8;
        color: #666;
    }
    
    .content-image {
        height: 400px;
        background-color: #ddd;
        border-radius: 8px;
    }
    
    @media (max-width: 768px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }
</style>