<section class="hero">
    <div class="container">
        <div class="hero-content">
            <h1>Compassionate and Professional Care for Your Little Ones</h1>
            <p>Connecting you with nurturing caregivers to ensure your child feels safe and loved every moment.</p>
        <div class="hero-actions">
            <a href="#" class="btn btn-primary">Get Started</a>
            <a href="#" class="btn btn-secondary">Join our community</a>
        </div>
        </div>
        <div class="hero-image">
            <!-- Add your hero image here -->
        </div>
    </div>
</section>

<style>
    .hero {
        padding: 4rem 0;
        background-color: var(--gray-color);
    }
    
    .hero .container {
        display: flex;
        align-items: center;
        gap: 3rem;
    }
    
    .hero-content {
        flex: 1;
    }
    
    .hero-content h1 {
        font-size: 3rem;
        line-height: 1.2;
        margin-bottom: 1.5rem;
        color: var(--dark-color);
    }
    
    .hero-content p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        color: #666;
    }
    
    .hero-actions {
        display: flex;
        gap: 1rem;
    }
    
    .hero-image {
        flex: 1;
        height: 400px;
        background-color: #ddd;
        border-radius: 8px;
        /* Add background image when available */
    }
    
    @media (max-width: 768px) {
        .hero .container {
        flex-direction: column;
        }
        
        .hero-content h1 {
        font-size: 2.5rem;
        }
    }
</style>