<style>
  /* Utility */
  .dark-button {
    border-width: 2px;
    border-style: solid;
    border-color: #f5f5f5;
    background-color: #000000;
    color: #ffffff;
    border-radius: 35px;
    text-decoration: none;
    text-align: center;
    padding-inline: 0.7rem;
    padding-block: 0.3rem;
    transition: all 1s ease-in-out;

    &:hover {
      opacity: 0.5;
    }

    &.get-started {
      padding-block: 0.45rem;
      font-size: 0.87rem;
      font-weight: 700;
    }
  }

  .light-button {
    border-width: 2px;
    border-style: solid;
    border-color: #f5f5f5;
    background-color: #ffffff;
    color: #000000;
    border-radius: 35px;
    text-decoration: none;
    text-align: center;
    padding-inline: 0.7rem;
    padding-block: 0.3rem;
    transition: all 1s ease-in-out;

    &:hover {
      opacity: 0.5;
    }

    &.join-community {
      padding-block: 0.45rem;
      font-size: 0.87rem;
      font-weight: 700;
    }
  }

  .transparent-button {
    border-width: 2px;
    border-style: solid;
    border-color: #f5f5f5;
    color: #000000;
    border-radius: 35px;
    text-decoration: none;
    text-align: center;
    padding-inline: 0.7rem;
    padding-block: 0.3rem;
    transition: all 1s ease-in-out;

    &:hover {
      opacity: 0.5;
    }

    &.get-started {
      padding-block: 0.45rem;
      font-size: 0.87rem;
      font-weight: 700;
    }
  }

  .cursor-pointer {
    cursor: pointer;
  }

  img {
    width: 100%;
    object-fit: cover;
    border-radius: 15px;
  }

  .separator {
    border-width: 1px;
    border-style: solid;
    border-color: #e4e7db;
    margin-block: 1.25rem;
  }
  /* End of Utility */

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-inline: 1rem;

    h1 {
      font-size: x-large;
    }

    .navigation {
      position: relative;
      font-size: 0.875rem;

      .links {
        position: absolute;
        right: 0;
        width: 8rem;
        /* background-color: #ffffff; */
        border-color: #f5f5f5;
        padding-block: 1.5rem;
        padding-top: 3rem;
        border-radius: 10px;
        box-shadow:
          0 4px 8px 0 rgba(0, 0, 0, 0.2),
          0 6px 20px 0 rgba(0, 0, 0, 0.19);
        /* display: flex; */
        display: none;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 1rem;

        #main-menu.nav-links {
          display: flex;
          flex-direction: column;
          gap: 1rem;

          .nav-link {
            text-decoration: none;
          }
        }

        .talk {
          text-wrap: nowrap;
        }

        .close {
          align-self: end;
          padding-inline: 0.5rem;
          position: absolute;
          top: 0.5rem;
        }
      }
    }
  }

  .hero {
    margin-top: 2rem;
    margin-inline: 1rem;
    padding-block: 2rem;
    padding-inline: 1rem;
    border-radius: 15px;
    background-color: #c4eb89;
    display: grid;
    grid-template-areas:
      'hero-picture'
      'hero-intro';

    .intro {
      grid-area: hero-intro;
      text-align: center;

      .header {
        font-size: 1.75rem;
      }

      .details {
      }

      .actions {
        margin-top: 2rem;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
      }
    }

    picture {
      grid-area: hero-picture;

      .hero-image {
        width: 100%;
        object-fit: cover;
      }
    }
  }

  main {
    margin-top: 4rem;
    padding-inline: 1rem;

    .childcare-philosophy {
      h2 {
        text-align: center;
      }

      .cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        .card {
          flex: 1;
          border-radius: 10px;
          background-color: #f5f5f5;
          padding-block: 0.25rem;
          padding-inline: 0.25rem;
          text-align: center;

          picture {
            img {
            }
          }

          h3 {
            margin-bottom: 0;
            padding-bottom: 0.25rem;
            padding-inline: 1rem;
            font-size: 1rem;
          }

          p {
            margin-top: 0;
            padding-inline: 1rem;
            font-size: 0.85rem;
          }
        }
      }
    }

    .nurturing-little-ones {
      margin-top: 4rem;

      h2 {
        text-align: center;
        padding-inline: 3rem;
      }

      .details {
        text-align: center;
      }

      .nurture-services {
        display: grid;
        grid-template-areas:
          'nurture-services-picture'
          'nurture-services-list';

        picture {
          grid-area: nurture-services-picture;
        }
        ul {
          grid-area: nurture-services-list;
          list-style: none;
          padding-left: 0;

          li {
            background-size: 1rem 1rem;
            padding-left: 1.5rem;
            margin-bottom: 0.5rem;
          }

          li:first-child {
            background: url('/src/assets/images/kids-building.jpg') no-repeat;
            background-size: 1rem 1rem;
            padding-left: 1.5rem;
            margin-bottom: 0.5rem;
          }
          li:nth-child(2) {
            background: url('/src/assets/images/kids-building.jpg') no-repeat;
            background-size: 1rem 1rem;
            padding-left: 1.5rem;
            margin-bottom: 0.5rem;
          }
          li:nth-child(3) {
            background: url('/src/assets/images/kids-building.jpg') no-repeat;
            background-size: 1rem 1rem;
            padding-left: 1.5rem;
            margin-bottom: 0.5rem;
          }
        }
      }
    }

    .services {
      margin-top: 2.5rem;
      background-color: #ebd451;
      padding-block: 1.2rem;
      padding-inline: 2rem;
      border-radius: 20px;

      .details {
        font-size: 0.85rem;
        display: flex;
        justify-content: space-between;
        align-items: center;

        .see-services {
          text-wrap: nowrap;
          font-size: 0.75rem;
          display: inline-block;
          padding-block: 0.5rem;
        }
      }

      .services-list {
        display: grid;

        ul {
          order: 2;
          list-style: none;
          padding-left: 0;
          display: flex;
          flex-direction: column;
          gap: 0.95rem;

          li {
            padding-block: 0.05rem;
            padding-inline: 1rem;
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);

            h3 {
              margin-bottom: 0;
            }

            p {
              font-size: 0.85rem;
              margin-top: 0.5rem;
            }

            &:hover {
              background: #eeedd9;
              backdrop-filter: unset;
              -webkit-backdrop-filter: unset;
            }
          }
        }

        picture {
          order: 1;

          img {
            align-self: center;
          }
        }
      }
    }

    .safety-measures {
      margin-top: 4rem;

      h2,
      p {
        text-align: center;
        padding-inline: 3rem;
      }

      .more-details {
        display: grid;
        gap: 0.5rem;

        picture {
        }

        ul {
          list-style: none;
          padding-left: 0;
          background-color: #c4eb8994;
          padding: 1rem;
          border-radius: 15px;
          font-size: 0.85rem;
          font-weight: 500;

          li {
            background: url('/src/assets/images/kids-building.jpg') no-repeat;
            background-size: 1rem 1rem;
            padding-left: 1.5rem;
            margin-bottom: 0.5rem;
          }
        }

        .first-aid {
          display: flex;
          flex-direction: column;
          align-items: center;
          gap: 1.25rem;

          .details {
            background-color: #ebd45193;
            padding-block: 1rem;
            padding-inline: 1.5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 12.5rem;
            /* min-width: 12rem; */
            border-radius: 15px;
            text-align: center;
          }

          .image {
            height: 5rem;
            /* width: 12.5rem; */
            width: 100%;
            padding: 0;

            img {
              height: 100%;
              width: 100%;
            }
          }
