      p {
        text-align: center;
      }

      p {
        font-size: 0.85rem;
      }

      .plan-details {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        padding-top: 1.25rem;

        .plans {
          display: flex;
          flex-direction: column;
          gap: 1rem;

          .plan {
            background-color: #e4e7db;
            padding: 1rem;
            border-radius: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;

            h3,
            span {
              font-size: 0.85rem;
            }

            h3 {
              text-wrap: nowrap;

              .save {
                margin-left: 0.2rem;
                padding-inline: 0.2rem;
                font-size: 0.65rem;
                font-weight: 500;
                border-radius: 12px;
                border: 1px solid rgb(255, 255, 255);
                background: rgba(255, 255, 255, 0.15);
                backdrop-filter: blur(12px);
                -webkit-backdrop-filter: blur(12px);
                box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
              }
            }

            span {
              text-align: end;

              .price {
                font-size: 1.5rem;
                font-weight: 700;
              }

              .time {
                font-size: 0.7rem;
                font-weight: 400;
              }
            }

            &.active {
              background-color: #c4eb89;
            }
          }
        }

        .details {
          article {
            display: none;
            opacity: 0;
            transform: translateY(10px);
            pointer-events: none;
            transition:
              opacity 300ms ease,
              transform 300ms ease;

            &.active {
              background-color: #e4e7db;
              padding-inline: 1rem;
              padding-block: 2rem;
              border-radius: 15px;
              display: flex;
              flex-direction: column;
              gap: 0;
              opacity: 1;
              transform: translateY(0);
              pointer-events: auto;

              h4 {
                margin-block: 0;
              }

              ul {
                list-style: none;
                padding-left: 0;
                display: flex;
                flex-direction: column;
                gap: 0.75rem;

                li {
                  font-size: 0.85rem;
                  background: url('/src/assets/images/kids-building.jpg')
                    no-repeat;
                  background-size: 1rem 1rem;
                  padding-left: 1.5rem;
                  margin-bottom: 0.5rem;
                }
              }

              .action {
                margin-top: 0.75rem;
                width: 100%;
                align-self: stretch;
                font-size: 0.75rem;

                .select {
                  width: 100%;
                }
              }
            }
          }
        }
      }
    }

    .reviews {
      margin-top: 4rem;
      background-color: #e4e7db;
      border-radius: 15px;
      padding: 1rem;
      display: grid;

      .intro {
        order: 1;

        p {
          font-size: 0.85rem;
        }
      }

      .client-reviews {
        order: 3;
        padding-top: 1.05rem;
        padding-bottom: 0.5rem;

        .client-reviews-slide {
          position: relative;
          height: auto;
          min-height: 3rem;

          .client-review {
            font-weight: 600;
            display: none;
            position: absolute;
            width: 100%;
            top: 0;
            left: 0;

            &.active {
              display: block;
            }
          }
        }

        .client-review-navigator {
          padding-top: 1rem;
          display: flex;
          justify-content: center;
          gap: 1rem;

          .left,
          .right {
            display: flex;
            cursor: pointer;
          }
        }
      }

      .client {
        order: 2;
        display: flex;
        flex-direction: column;
        padding-top: 1.5rem;
        padding-bottom: 0.35rem;

        .name {
          order: 2;
          align-self: center;
          text-align: center;

          h3 {
            margin-bottom: 0;
          }
          span {
            font-size: 0.8rem;
          }
        }
        img {
          order: 1;
          width: 150px;
          height: 175px;
          align-self: center;
        }
      }
    }

    .parting-note {
      margin-top: 4rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;

      .logo {
        img {
        }
      }

      .details {
        p {
          font-size: 0.85rem;
        }
        .actions {
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 1rem;
          flex-wrap: wrap;
        }
      }
    }
  }

  footer {
    margin-block: 3rem;
    margin-bottom: 3rem;
    margin-inline: 2rem;
    background-color: #c4eb89;
    border-radius: 35px;
    padding: 2rem;
