  <script is:client='load'>
    document.addEventListener('DOMContentLoaded', function () {
      if (window.innerWidth >= 776) {
        console.log('Screen size does not need mobile navigator.')
      } else {
        // =========================================================
        // HEADER NAV (with smooth slide animation)
        // =========================================================
        const navIcon = document.querySelector('header .menu-icon')
        const navLinks = document.querySelector('header .navigation .links')
        const navClose = document.querySelector('header .navigation .close')

        if (navLinks) {
          // Start hidden
          navLinks.style.display = 'none'
          navLinks.style.opacity = '0'
          navLinks.style.transform = 'translateY(-10px)'
          navLinks.style.transition = 'all 300ms ease'
        }

        function openMenu() {
          navLinks.style.display = 'flex'
          requestAnimationFrame(() => {
            navLinks.style.opacity = '1'
            navLinks.style.transform = 'translateY(0)'
          })
        }

        function closeMenu() {
          navLinks.style.opacity = '0'
          navLinks.style.transform = 'translateY(-10px)'
          setTimeout(() => {
            navLinks.style.display = 'none'
          }, 250)
        }

        if (navIcon) navIcon.addEventListener('click', openMenu)
        if (navClose) navClose.addEventListener('click', closeMenu)
      }

      // =========================================================
      // REVIEW SLIDER WITH:
      // - Fade animation
      // - Auto slide
      // - Manual prev/next
      // - Touch / Swipe support
      // =========================================================
      const slides = document.querySelectorAll('.client-review')
      const leftBtn = document.querySelector('.client-review-navigator .left')
      const rightBtn = document.querySelector('.client-review-navigator .right')
      const slider = document.querySelector('.client-reviews')

      let currentSlide = 0
      let intervalId = null

      // Prepare the fade animation for all slides
      slides.forEach((slide) => {
        slide.style.opacity = '0'
        slide.style.transition = 'opacity 600ms ease'
        slide.style.position = 'absolute'
        slide.style.left = '0'
        slide.style.right = '0'
      })

      function showSlide(index) {
        slides.forEach((slide, i) => {
          slide.classList.remove('active')
          slide.style.opacity = i === index ? '1' : '0'
          if (i === index) slide.classList.add('active')
        })
      }

      function nextSlide() {
        currentSlide = (currentSlide + 1) % slides.length
        showSlide(currentSlide)
      }

      function prevSlide() {
        currentSlide = (currentSlide - 1 + slides.length) % slides.length
        showSlide(currentSlide)
      }

      function startAutoSlide() {
        intervalId = setInterval(nextSlide, 4000)
      }

      function stopAutoSlide() {
        clearInterval(intervalId)
      }

      // Manual buttons
      if (rightBtn) {
        rightBtn.addEventListener('click', function () {
          stopAutoSlide()
          nextSlide()
          startAutoSlide()
        })
      }

      if (leftBtn) {
        leftBtn.addEventListener('click', function () {
          stopAutoSlide()
          prevSlide()
          startAutoSlide()
        })
      }

      // Hover pause
      if (slider) {
        slider.addEventListener('mouseenter', stopAutoSlide)
        slider.addEventListener('mouseleave', startAutoSlide)
      }

      // =========================================================
      // TOUCH / SWIPE SUPPORT
      // =========================================================
      let startX = 0
      let endX = 0

      if (slider) {
        slider.addEventListener('touchstart', function (e) {
          startX = e.touches[0].clientX
        })

        slider.addEventListener('touchend', function (e) {
          endX = e.changedTouches[0].clientX
          const diff = endX - startX

          // Detect swipe threshold ~50px
          if (Math.abs(diff) > 50) {
            stopAutoSlide()
            if (diff < 0)
              nextSlide() // swipe left → next
            else prevSlide() // swipe right → previous
            startAutoSlide()
          }
        })
      }

      // =========================================================
      // INITIALIZE
      // =========================================================
      showSlide(currentSlide)
      startAutoSlide()

      // =========================================================
      // INTERACTIVE PRICING SECTION
      // =========================================================

      const planButtons = document.querySelectorAll('.pricing .plan')
      const planDetails = document.querySelectorAll('.pricing .details article')

      function activatePlan(index) {
        // Remove active from all plans
        planButtons.forEach((btn) => btn.classList.remove('active'))
        // Remove active from all detail articles
        planDetails.forEach((detail) => detail.classList.remove('active'))

        // Activate selected
        planButtons[index].classList.add('active')
        planDetails[index].classList.add('active')
      }

      // function activatePlan(index) {
      //   // Remove active from all plans
      //   planButtons.forEach((btn) => btn.classList.remove('active'))

      //   // Fade out all articles
      //   planDetails.forEach((detail) => {
      //     detail.classList.remove('active')
      //   })

      //   // Slight delay for smooth fade (prevents overlap)
      //   setTimeout(() => {
      //     planButtons[index].classList.add('active')
      //     planDetails[index].classList.add('active')
      //   }, 10) // small delay helps transition start correctly
      // }

      // Attach click events
      planButtons.forEach((btn, index) => {
        btn.addEventListener('click', () => {
          activatePlan(index)
        })
      })
    })
  </script>
